<section class="about-immune-5 newsletter-sec">
  <div class="page-width">
    <div class="about-immune-flex">
      <div class="about-immune-text">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.info }}</p>
             {% assign formId = 'Contact_' | append : section.id %}
          {% form 'customer', id : formId %}
          {%- if form.posted_successfully? -%}
          <p class="form-message form-message--success" tabindex="-1" data-form-status>
            Thanks For Subscribing!
          </p>
          {%- endif -%}
          <div class="newsletter-subscribe">
          <input type="hidden" value="newsletter" name="contact[tags]" >
          <div class="input-container">
            <input type="email" placeholder="Enter your email address" required="required" id="{{ formId }}-email" name="contact[email]" value="{% if form.email %}{{ form.email}}{% endif %}">
          </div>
          <input type="submit" value="Subscribe" class="custom-site-btn custom-site-btn2">
        </div>
          {% endform %}
      </div>
      <div class="about-immune-img">
        <img src="{{ section.settings.image | img_url : "master" }}">
      </div>
    </div>
  </div>
</section>

{% schema %}
{
"name": "Newsletter Section",
"settings": [
{
"type" : "text",
"id" : "heading",
"label" : "Heading"
},
{
"type" : "textarea",
"id" : "info",
"label" : "Description"
},
{
"type" : "image_picker",
"id" : "image",
"label" : "Image"
}
],
"presets":
[
{
"name" : "Newsletter Section",
"category" : "Custom Sections"
} 
]

}
{% endschema %}

