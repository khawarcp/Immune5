<section class="page-banner" style="background-image: url('{{ section.settings.background_image | img_url : 'master' }}');">
    {% if section.settings.show_title %}
    <div class="page-width page-banner-title">
        <h1>{{ section.settings.title }}</h1>
    </div>
    {% endif %}
</section>

{% schema %}
{
    "name" : "Banner",
    "settings":
    [
       {
           "type": "image_picker",
           "id": "background_image",
           "label": "Background Image"
       },
         {
              "type": "text",
              "id": "title",
              "label": "Title",
              "default": "Title"
         },
            {
                "type": "checkbox",
                "id": "show_title",
                "label": "Show Title",
                "default": true
            }

    ],
   "presets": [
       {
           "category": "Custom Sections",
           "name":"Banner"
       }
   ]    
}
{% endschema %}