<section class="page-banner" style="background-image: url('{{ section.settings.background_image | img_url : 'master' }}');">
    <div class="page-width page-banner-title">
        <h1>{{ section.settings.title }}</h1>
    </div>
</section>

{% schema %}
{
    "name" : "Banner",
    "settings":
    [
       {
           "type": "image_picker",
           "id": "background_image",
           "label": "Background Image"
       },
         {
              "type": "text",
              "id": "title",
              "label": "Title"
         }

    ],
   "presets": [
       {
           "category": "Custom Sections",
           "name":"Banner"
       }
   ]    
}
{% endschema %}