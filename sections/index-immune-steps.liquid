<section class="immune-properties">
  <div class="page-width">
    <div class="immune-properties-flex">
      {% for block in section.blocks %}
      <div class="immune-properties-col">
        <div class="immune-properties-img">
          {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | img_url : 'master' }}" class="lazyload">
          {% endif %}
        </div>
        <div class="immune-properties-text">
          <h5> {{ block.settings.heading }} </h5>
          <p>{{ block.settings.info }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>

</section>
{% schema %}
{
"name" : "Properties",
"settings" : [
{
"type" : "image_picker",
"id" : "back_image",
"label" : "Background Image"
}
],
"blocks":
[
{
"name" : "Property",
"type" : "property",
"limit" : 4,
"settings" :
[                
{
"type" : "text",
"id" : "heading",
"label" : "Heading"
},
{
"type" : "textarea",
"id" : "info",
"label" : "Description"
},
{
"type" : "image_picker",
"id" : "image",
"label" : "Image"
}
]
}
],
"presets" :
[
{
"name" : "Properties",
"category" : "Custom Sections"
}  
]

}
{% endschema %}

